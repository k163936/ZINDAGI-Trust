<html>
  <head>
    <link href="/css/login-style.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <div class="login-page">
      <!-- <h1>Register</h1> -->
      <div class="form">
        <h1>Post Donation</h1>
        <form class="login-form" action="/profile/postDonation" method="POST">
          <input type="text" placeholder="Amount in Rupees" name="amount" />
          <textarea
            rows="4"
            cols="31"
            placeholder="Details"
            name="details"
          ></textarea>
          <br /><br />
          <div
            style="float: left;
          clear: none;"
          >
            <label
              for="Doner"
              style="float: left;
          clear: none;
          display: block;
          padding: 2px 1em 0 0;"
              >Doner</label
            >
            <input
              type="radio"
              name="type"
              id="Doner"
              value="doner"
              style="float: left;
          clear: none;
          margin: 2px 0 0 2px;"
            />
            <label
              for="Accepter"
              style="float: left;
          clear: none;
          display: block;
          padding: 2px 1em 0 0;"
              >Accepter</label
            >
            <input
              type="radio"
              name="type"
              id="Accepter"
              value="accepter"
              style="float: left;
          clear: none;
          /* margin: 2px 0 0 2px;"
            />
          </div>
          <% if(message.length > 0) { %>
          <p><%= message %></p>
          <% } else { %>
          <p>To confirm you donation post please confirm your password.</p>
          <% } %>
          <input type="password" placeholder="Password" name="password" />
          <button>Post</button>
          <p class="message">Want to exit <a href="/profile">Click here!</a></p>
        </form>
      </div>
    </div>
  </body>
  <script type="text/javascript" src="/js/login-script.js"></script>
</html>
